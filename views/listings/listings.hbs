<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>

    <link rel="stylesheet" href='/stylesheets/listings.css'>
    <style>
        html,body,h1,h2,h3,h4,h5,h6 {font-family: "Roboto", sans-serif}
    </style>
    <title>Junior developers listings</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="/javascripts/jquery-1.10.2.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
</head>
<div id="ideas">
    <div class="row">
        {{#each listings}}
            <div class="w3-panel w3-grey w3-topbar w3-bottombar w3-border-amber w3-round-large">
                <div class="col-md-6">
                    <listings>
                        <small class="date">
                            <br><br>
                            <p class="postDate">date of publication: {{this.date}}</p>
                        </small>
                        <small class="position">
                            <h3>{{this.position}}</h3>
                        </small>
                        <small class="author">
                            <h4>{{this.author}}</h4>
                        </small>
                        <br/>
                        <div class="fl_right" class="w3-panel w3-round-large w3-teal">
                            <a href="/listings/details/{{this.id}}" class="w3-btn w3-blue w3-round-large">Read more</a>
                        </div>
                    </listings>
                </div>
            </div>
            <script>
                let date = $('.postDate').text();
                let formattedDate = moment(date).format('LLLL');
                $('.postDate').html(`Posted on <em>${formattedDate}</em>`)
            </script>
        {{/each}}
    </div>
</div>
<div  class="w3-round-large">
        <a href="/listingInput" class="w3-btn w3-blue w3-round-large">Publish your listing here</a>
    <a href="/contactUs" class="w3-btn w3-black w3-round-large">Contact us!</a>
</div>

