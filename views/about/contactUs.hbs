<div class="container body-content span=12 offset=0">
    <div class="well">
        <form class="form-horizontal" enctype="multipart/form-data" method="post" action="/about/contactUs">
            <fieldset>
                <legend>Contact Us</legend>
                <div class="col-sm-6">
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="name">Name</label>
                    <div class="col-sm-8 ">
                        <input type="text" class="form-control" id="name" placeholder="Name" name="name" required value={{name}} >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="email">Email</label>
                    <div class="col-sm-8 ">
                        <input type="email" class="form-control" id="email" placeholder="Email" required name="email" value={{email}}>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="phone">Phone Number</label>
                    <div class="col-sm-8 ">
                        <input type="text" class="form-control" id="phone" placeholder="Telephone Number" name="phone">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="content">Content</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" id="content" rows="5" name="content" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-8">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                </div>
                <div class="col-sm-6">
                <div>
                    <iframe id="iframe" width="450" height="250" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.bg/maps?ie=UTF8&amp;cid=87010907550128165877&amp;q=Programers&amp;gl=BG&amp;hl=en&amp;ll=42.66678,23.35234&amp;spn=0.006295,0.006295&amp;t=m&amp;output=embed">
                    </iframe>
                </div>
                    <div class="col-sm-offset-6">
                        <em> Bulgaria, Sofia 1000</em><br>
                        <em> 15-17, Str. Tintyava</em><br>
                        <strong> Phone: +359 0888 888888</strong><br>
                        <strong> Email: developers@gmail.com</strong>
                    </div>
                </div>
            </fieldset>

        </form>

    </div>
    <div class="col-sm-8 col-sm-offset-8">
    {{#if isUserAuthorized}}
                   <button><a href="about/messages/{{user.id}}" class="w3-btn w3-blue-grey w3-round-large">Show all messages</a></button>
            {{/if}}
            </div>
</div>
