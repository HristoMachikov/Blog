<div class="container body-content">
    <div class="row">
        <div class="col-md-12" id="blogcontent">
            <article>
                <header id="blogtitle">
                    <h2>{{newsStory.title}}</h2>
                </header>
                <p>
                    {{newsStory.content}}
                </p>
                {{#if newsStory.pathImage}}
                    {{#each newsStory.pathImage}}
                        <img src="{{this}}" alt="Article Image" width="300px"/>
                    {{/each}}
                {{/if}}

                <p>
                    <small class="author">
                        Author:
                        {{newsStory.author}}
                    </small>
                </p>
                <footer>
                    <div class="pull-left">
                        <p>Posted on {{newsStory.date}}</p>
                    </div>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                            <a class="btn btn-success btn-xs" href="/news/edit/{{newsStory.id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/news/delete/{{newsStory.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/blog">Back &raquo</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>

