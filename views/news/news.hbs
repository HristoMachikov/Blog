<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <title>Junior developers news</title>
    <link rel="stylesheet" href='/stylesheets/listingForm.css'>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="/stylesheets/news.css" type="text/css" />
    <script src="/javascripts/jquery-1.10.2.js"></script>
    <script src="/javascripts/bootstrap.js"></script>



</head>
<body>
<header>
    <div class="navmenu">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">asd</span>
                    <span class="icon-bar">asd</span>
                    <span class="icon-bar">asd</span>
                </button>
            </div>
        </div>
</header>




<div  class="w3-round-large">
    {{#if isUserAuthorized}}
        <a href="news/create/{{user.id}}" class="w3-btn w3-blue-grey w3-round-large">Create a news</a>
    {{/if}}
</div>
<br/>


{{#each news}}
    <div class="container body-content ">
    <div class="row">
        <div class="col-md-12">
            <article>
    <div class="w3-container w3-teal w3-panel w3-round-large"
        <p><h1>{{this.title}}</h1>
    <br/>
        <h5>{{this.summary}}</h5>
    <br/>
        <h5>{{this.author}}</h5>
                </p>
                {{#if user}}
                <div class="fl_left" class="w3-panel w3-round-large w3-teal"><img src="images/demo/100x180.gif" alt="" /></div>
                {{/if}}
                <div class="fl_right" class="w3-panel w3-round-large w3-teal">
                    <a href="/news/details/{{this.id}}" class="w3-btn w3-text-light-blue w3-round-large">Read more</a>
                </div>
            </article>
    </div>
    </div>
    </div>
{{/each}}

</body>
</html>
