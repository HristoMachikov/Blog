<div class="container body-content">
    <div class="row">
        <div class="col-md-12" id="blogcontent">
            <article>
                <header id="blogtitle">
                    <h2>{{article.title}}</h2>
                </header>

                <p>
                    {{article.content}}
                </p>

                {{#if article.pathImage}}
                    {{#each article.pathImage}}
                        <img src="{{this}}" alt="Article Image" width="300px"/>
                    {{/each}}
                {{/if}}

                <p>
                    <small class="author">
                        {{article.author.fullName}}
                    </small>
                </p>
                <footer>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                        <a class="btn btn-success btn-xs" href="/article/edit/{{article.id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/article/delete/{{article.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/blog">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>

