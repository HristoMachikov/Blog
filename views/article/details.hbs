<script>
    let date = $('.postDate').text();

    const dateFormat = 'L' + " - " + 'LT';
    let formattedDate = moment(date).format(dateFormat);
    $('.postDate').html(`Posted on <em>${formattedDate}</em>`);

    let dateE = $('.postDateEdit').text();
